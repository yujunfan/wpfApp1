<Page x:Class="WpfApp1.window.layout.Layout"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.window.Layout"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Layout">

    <Grid Margin="10" >

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <local:Menu Grid.Column="0"  Username="YourNameValue"  MyClick="Button_Click"   />
        <!-- 在窗口中添加一个 Frame 控件用于加载页面 -->
        <Frame x:Name="SubFrame" Grid.Column="1"   NavigationUIVisibility="Hidden"   />
    </Grid>
</Page>
